
pipeline {
    agent{
    docker{
        image 'maven:3.9.8-eclipse-temurin-21'
        reuseNode true
    }
    }

    stages {
        stage('Origin') {
            steps {
                echo 'Welcome to PRUDWI CEO World'
            }
        }

        stage('Build')
        {
            steps{
                echo 'PRUDWI CEO BUILDING'
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('Testing')
        {
            parallel{
                stage('Unit Testing')
                {
                    steps{
                        echo 'PRUDWI CEO UNIT TESTING'
                        sh 'mvn test'
                    }
                    post{
                        always{
                                junit '**/target/surefire-reports/*.xml'
                        }
                    }
                }

                stage('Integration Testing'){
                    steps{
                        echo 'PRUDWI CEO INTEGRATION TESTING'
                        sh 'mvn verify -DskipUnitTests'
                    }

                    post{
                        always{
                            junit '**/target/failsafe-reports/*.xml'
                        }
                    }

                }
            }
        }
    }
}
